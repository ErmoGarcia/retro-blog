---
import { wm } from '../scripts/windows.ts';
const width = wm.defaultWindowSize.width;
const height = wm.defaultWindowSize.height;
---
<div id="original-window" class="window absolute p-2 bg-wild-sand-100" style={{ visibility: "hidden" }}>
	<div class="border-4 border-denim-600">
		<div class="window-status-bar h-4 bg-denim-600"></div>
		<div class="p-2" style={{ width: `${width}px`, height: `${height}px` }}>
			<iframe class="w-full h-full block border-none" />
		</div>
	</div>
</div>

<script>
import { wm } from '../scripts/windows.ts';

const w = document.querySelector("#original-window") as HTMLElement;
if (w !== null) {
	w.style.top = `${document.documentElement.clientHeight / 2 - wm.defaultWindowSize.height / 2}px`;
	w.style.left = `${document.documentElement.clientWidth / 2 - wm.defaultWindowSize.width / 2}px`;
	w.remove();
}
</script>
